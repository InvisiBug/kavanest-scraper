{
  "name": "kavanest-device-scraper",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/InvisiBug/kavanest-device-scraper.git",
  "author": "InvisiBug <matthewjkavanagh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec \"ts-node \" ./src/index.ts",
    "run": "yarn build && node ./dist/index.js",
    "build": "tsc && cp ./src/devices.yaml ./dist",
    "push": "./bin/push.sh",
    "deploy": "yarn push && ./bin/deploy.sh",
    "up": "clear && ./bin/start-container.sh",
    "down": "docker compose down",
    "logs": "docker logs kavanest-scraper -f"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "js-yaml": "^4.1.0",
    "kavanest-store": "https://github.com/InvisiBug/kavanest-store.git",
    "mongodb": "^4.2.0",
    "mongoose": "^6.0.12",
    "mqtt": "^4.2.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.4",
    "@types/node": "^16.11.6",
    "@types/ws": "^8.2.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
